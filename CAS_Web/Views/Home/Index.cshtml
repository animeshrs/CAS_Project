        function InfoByCurr(toCurrency, searchItemValue) {
            var divToBeWorkedOn = "#AjaxPlaceHolder";
            var webMethod = "https://localhost:44317/api/ExchangeRate?";
            var parameters = "amountString=1&fromCurrency=EUR&toCurrency=" + toCurrency;
            var urlWebApi = webMethod + parameters;

            //alert(toCurrency);
            if (toCurrency != "EUR") {
                $.ajax({
                    type: "GET",
                    url: urlWebApi,
                    //data: parameters,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (msg) {
                        //$.each(msg, function (index, element) {
                        var conversionValue = msg.split(" ")[0];
                        //alert(conversionValue);
                        if (searchItemValue != null && $.trim(searchItemValue) != "") {
                            getProductDetailsByCurrencySearchValue(conversionValue, searchItemValue);
                        } else {
                            getProductDetailsByCurrency(conversionValue);

                        };

                    },
                    error: function (e) {

                        alert("Failed to get Exchange Rates, Please ensure service is up and running!!");
                    }
                });
            } else {
                if (searchItemValue != null && $.trim(searchItemValue) != "") {

                    getProductDetailsByCurrencySearchValue(1, searchItemValue);
                } else {
                    getProductDetailsByCurrency(1);
                }
            }
        }
        
